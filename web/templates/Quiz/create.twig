{% extends "frame.twig" %}
{% block content %}
    {% autoescape true %}
        問題一覧
        <form action="/quiz/quizzes/new" method="post" id="createQuiz">
        <table>
       {% for question in question_list %}
            <tr>
                <td><input type="checkbox" name="question[]" value="{{question.id}}"></td>
                <td>{{ question['title'] }}</td><td>{{ question['content'] }}</td>
            </tr>
        {% endfor %}
        </table>
        <hr>
        <label>クイズ名</label>
        <input type="text" size="100" value="{{params.title}}" name="title" 
            placeholder="クイズ名を入力してください" class="form-control required">
        <div class="text-waring" style="color: red;">{{error_list.title}}</div>
        <input type="submit" value="クイズを作成する">
        <input type="hidden" name="{{csrf_key}}" value="{{csrf_token}}">
        </form>
    {% endautoescape %}
{% endblock %}