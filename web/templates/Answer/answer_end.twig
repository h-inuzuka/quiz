{% extends "frame.twig" %}
{% block content %}
    {% autoescape true %}
        あなたの解答結果
        <br>
        正解数　：　{{result['correctNumber']}}
        回答時間　：　{{result['responseTime']}}
        <hr>
        <form action="/quiz/ranking" method="get">
            <input type="submit" value="ランキングを見る" class="btn btn-primary">
        </form>
        <hr>
        <form action="/quiz/comment" method="post">
            <input type="text" value="" name="comment">
            <input type="submit" value="コメントする" class="btn btn-primary">
            <input type="hidden" name="{{csrf_key}}" value="{{csrf_token}}">
        </form>
    {% endautoescape %}
{% endblock %}